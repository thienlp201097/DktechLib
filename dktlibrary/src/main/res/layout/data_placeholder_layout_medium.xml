<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginBottom="0dp"
    android:background="#30cccccc"
    android:padding="12dp">
    <!-- Logo -->
    <View
        android:id="@+id/shimmer_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_shimmer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <View
        android:id="@+id/shimmer_title"
        android:layout_width="120dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_shimmer_placeholder"
        app:layout_constraintStart_toEndOf="@id/shimmer_logo"
        app:layout_constraintTop_toTopOf="@id/shimmer_logo" />

    <!-- Desc -->
    <View
        android:id="@+id/shimmer_desc"
        android:layout_width="180dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_shimmer_placeholder"
        app:layout_constraintStart_toEndOf="@id/shimmer_logo"
        app:layout_constraintTop_toBottomOf="@id/shimmer_title" />

    <!-- Rating -->
    <View
        android:id="@+id/shimmer_rating"
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_shimmer_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_logo" />

    <View
        android:id="@+id/shimmer_rating2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:background="@drawable/bg_shimmer_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/shimmer_cta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_rating" />

    <!-- CTA Button -->
    <View
        android:id="@+id/shimmer_cta"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_shimmer_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>