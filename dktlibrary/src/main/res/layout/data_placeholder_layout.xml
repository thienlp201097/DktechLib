<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#30cccccc"
    android:layout_height="50dp"
    android:layout_marginBottom="1dp">

    <View
        android:id="@+id/shimmer_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorItemAndroidVersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Placeholder Title -->
    <View
        android:id="@+id/shimmer_title"
        android:layout_width="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:background="@color/colorItemAndroidVersion"
        app:layout_constraintStart_toEndOf="@id/shimmer_logo"
        app:layout_constraintTop_toTopOf="@id/shimmer_logo"
        app:layout_constraintEnd_toStartOf="@id/shimmer_button"/>

    <!-- Placeholder Subtitle -->
    <View
        android:id="@+id/shimmer_subtitle"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:background="@color/colorItemAndroidVersion"
        app:layout_constraintStart_toEndOf="@id/shimmer_logo"
        app:layout_constraintTop_toBottomOf="@id/shimmer_title"/>

    <!-- Placeholder Button -->
    <View
        android:id="@+id/shimmer_button"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:background="@color/colorItemAndroidVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>